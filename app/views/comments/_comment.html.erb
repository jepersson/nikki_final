<li>
	<div class="comment-image">
		<%= link_to image_tag(User.find(comment.user_id).photo.url(:mini)), user_path(:id => comment.user_id, :view => "user_posts") %>
	</div>
	<div class="comment-text-border">
		<div class="comment-user">
			<%= link_to User.find(comment.user_id).name, 
														user_path(comment.user_id) %>
		</div>
		<div class="comment-content">
			<%= comment.content %>
			<div class="comment-time">
				<%= time_ago_in_words(comment.created_at) %> ago. 
				<% if current_user != nil %>
					<% if comment.user_id == current_user.id %>
						<%= link_to t(:delete), comment, :method => :delete, :remote => true %>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</li>