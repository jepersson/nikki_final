
<div class="static-border">
	<div class="static-head">
		<h1>Sign in</h1>
	</div>
	<div class="static-mid">
		<% form_for @user_session do |f| %>
			<div>
				<%= f.label :email %><br />
			  <%= f.text_field :email %>
			</div>
		  <div>
		  		<%= f.label :password %><br />
				  <%= f.password_field :password %>
		  </div>
			<div>
				<%= f.submit "Sign in" %>
			</div>
			<div>Not a user yet? Sign up <%= link_to "here", signup_path %>.</div>
		<% end %>
	</div>	
	<div class="static-tail">
		Justice League <i>of</i> Sweden
	</div>	
</div>
