<% if flash[:notice] %>
	<div class="flash-notice">
		<%= t :observe %>:<br />
		<%= flash[:notice] %>
	</div>
<% end %>
<% if @message %>
	<div class="message">
		<%= t :message %>:<br />
		<%= @message %>
	</div>
<% end %>
<%= form_for @user do |f| %>
	<div>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :email %><br />
		<%= f.text_field :email %>
  </div>
	<div>
		<%= f.label :intro %><br />
		<%= f.text_field :intro %>
  </div>
  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
	<div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.submit "Edit" %>
  </div>
<% end %>
