<!DOCTYPE html>
<html>
<head>
	<title>Nikki</title>
	<%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "livepipe", "slider", "scrollbar", "ym4r-gm" %>
	<%= csrf_meta_tag %>
	<%= raw GMap.header %>
</head>
<body>
	<div id="container">
		<%= render "shared/menu" %>
		<%= yield %>
		<%= render "shared/footer" %>
	</div>
	<div id="user_nav">
		<% if current_user %>
		<%= link_to "Logout", signout_path %>
		<% else %>
		<%= link_to "Register", signup_path %> |
		<%= link_to "Login", new_user_session_path %>
		<% end %>
	</div>
</body>
</html>
