<div class="content-divider">
	<div class="sub-menu-head">Latest Posts</div>
<div class="pagination-page">Page:</div>
	<%= will_paginate @posts, :prev_label => '<', :next_label => '>' %>
</div>

<% if flash[:notice] %>
	<div class="flash-notice">
		<%= t :observe %>:<br />
		<%= flash[:notice] %>
	</div>
<% end %>
<% if @message %>
	<div class="message">
		<%= t :message %>:<br />
		<%= @message %>
	</div>
<% end %>

<%= render 'posts/posts' %>