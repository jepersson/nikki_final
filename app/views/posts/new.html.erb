<div id="content-border">
	<% if flash[:notice] or error_messages_for @post %>
		<div class="flash-notice">
			<%= t :observe %>:<br />
			<%= flash[:notice] %>
			<%= error_messages_for @post %>
		</div>
	<% end %>
	<% if @message %>
		<div class="message">
			<%= t :message %>:<br />
			<%= @message %>
		</div>
	<% end %>
	
	<div class="login-onethird-italic">
		“Create a post! Be happy! Love your frinds and hug your mom”
	</div>
	<div id="content-id-<%= @post.id.to_s %>" class="post-frame">
		<div class="create-post-content">
			<% form_for @post, :html => { :multipart => true } do |f| %>
				<div>
					<%= f.label t :title %><br />
					<%= f.text_field :title %>
				</div>
				<div>
					<%= f.label t :content %><br />
					<%= f.text_area :content %>
				</div>
				<div>
					<%= f.label t :location %><br />
					<%= f.text_field :position %>
				</div>
				<div>
					<%= f.file_field :photo %>
				</div>
				<div>
					<%= f.submit t(:create_post) %>
				</div>
			<% end %>
		</div>
	</div>
	<div class="login-onethird-italic">
		“where you can stalk your friends, enemies, lovers, ex-lovers or just anyone else you like.”
	</div>
</div>