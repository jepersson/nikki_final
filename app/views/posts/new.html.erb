<%= error_messages_for @post %>
<div class="column-onethird">
<div id="post-id-<%= @post.id %>" class="post-border">
<div class="post-menu-border">
	<ul id="post-menu">
		<li id="photo"></li>
		<li id="post"></li>
		<li id="comment"></li>
		<li id="location"></a></li>
	</ul>
</div>

<div id="content-id-<%= @post.id.to_s %>" class="post-frame">
	<% form_for @post, :html => { :multipart => true } do |f| %>
		<div>
			<%= f.label :title %><br />
			<%= f.text_field :title %>
		</div>
		<div>
			<%= f.label :content %><br />
			<%= f.text_area :content %>
		</div>
		<div>
			<%= f.file_field :photo %>
		</div>
		<%= f.submit %>
	<% end %>
</div>
</div>